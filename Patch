    <script>
        let cart = [];

        function showPage(pageId) {
            document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
            document.getElementById('page-' + pageId).classList.add('active');
        }

        function addToCart(name, price) {
            cart.push({name, price});
            updateCart();
            // Jednoduch√° vibraƒçn√≠ odezva pro mobil
            if(navigator.vibrate) navigator.vibrate(50);
        }

        function updateCart() {
            const count = document.getElementById('cart-count');
            const list = document.getElementById('cart-items');
            const totalDiv = document.getElementById('cart-total');
            const priceTag = document.getElementById('total-price');
            
            count.innerText = cart.length;
            
            if (cart.length === 0) {
                list.innerHTML = '<p class="text-gray-500 text-center py-10">Ko≈°√≠k je zat√≠m pr√°zdn√Ω.</p>';
                totalDiv.classList.add('hidden');
            } else {
                list.innerHTML = cart.map((item, index) => `
                    <div class="p-4 glass rounded-xl flex justify-between items-center">
                        <span>${item.name}</span>
                        <span class="font-bold">${item.price} Kƒç</span>
                    </div>
                `).join('');
                
                const total = cart.reduce((sum, item) => sum + item.price, 0);
                priceTag.innerText = total + ' Kƒç';
                totalDiv.classList.remove('hidden');
            }
        }
    </script>
